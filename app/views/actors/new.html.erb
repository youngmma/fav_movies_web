<!-- Get user input to add a new actor -->

<div class="page-header">
  <h1>Add a New Actor</h1>
</div>

<div class="row">
  <div class="col-md-6">

    <%= form_tag actors_url, :method => 'post' do %>

      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: 'form-control', placeholder: 'Enter the name of actor here' %>
      </div>

      <div class="form-group">
        <%= label_tag :photo_url %>
        <%= url_field_tag :photo_url, "", class: 'form-control', placeholder: 'Enter URL to image of actor image' %>
      </div>

      <div class="form-group">
        <%= label_tag :movie_id, "Starred Movie" %>
        <%= select_tag :movie_id, options_from_collection_for_select(Movie.all.order('title asc'), :id, :title), class: 'form-control' %>
        <%= link_to "Add New Movie", new_movie_url %> 
      </div>

      <%= submit_tag 'Add Actor', class: 'btn btn-default' %>
      <%= link_to 'Back', movies_url, class: 'btn btn-default' %>
    <% end %>

  </div>
</div>

